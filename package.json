{
  "name": "simple-node-server",
  "version": "1.0.0",
  "description": "markdown server using https module",
  "main": "./lib/index.js",
  "scripts": {
    "test": "jest",
    "dev": "ts-node src/index.ts",
    "build:local": "tsc",
    "build:vercel": "yarn prep:vercel && echo \"Vercel lambda constructs generated. Output saved to ./v_out/\"",
    "build": "npm run build:local",
    "clean:build": "rm -rf lib",
    "clean:vercel": "ts-node src/scripts/clean-vercel.ts",
    "docker:image-build": "docker build . -t couch-gag:latest -t couch-gag-server:latest",
    "docker:container-run": "docker run -d -p 2023:2023 --name couch-gag couch-gag:latest", 
    "start": "node lib/index.js",
    "fmt": "prettier --write .",
    "prep:vercel:src": "cp -v src/cors.ts src/error.ts src/log.ts src/router.ts src/service.ts src/types.ts src/util.ts v_out/src/",
    "prep:vercel:deps": "cp package.json v_out/package.json",
    "prep:vercel:data": "cp -R data/ v_out/data/",
    "prep:vercel": "yarn prep:vercel:deps && yarn prep:vercel:src && yarn prep:vercel:data"
  },
  "author": "@nickgdev",
  "license": "ISC",
  "dependencies": {
    "@nickgdev/couch-gag-common-lib": "^1.0.0",
    "@vercel/node": "^1.15.1",
    "chalk": "4.1.2",
    "express": "^4.18.1",
    "gray-matter": "^4.0.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.25",
    "dotenv": "^16.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.3"
  }
}
